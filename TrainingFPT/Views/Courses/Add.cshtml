@model TrainingFPT.Models.CourseDetail

@{
    ViewData["Title"] = "Create new Courses Page";
    ViewData["namePage"] = "Create new Course";
    ViewBag.report = false;

    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="row">
    <div class="col-sm-12 col-md-12">
        <a class="btn btn-primary" href="@Url.Action("Index", "Courses")"> Back to list Courses </a>
        <div class="card card-primary my-3">
            <div class="card-header">
                <h5 class="card-title"> Create new Coures </h5>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" method="post" asp-action="Add">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NameCourse"></label>
                                <input type="text" class="form-control" asp-for="NameCourse" />
                                <span asp-validation-for="NameCourse"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label> Category </label>
                                <select class="form-control"
                                        asp-for="CategoryId"
                                        asp-items="@(new SelectList(ViewBag.Categories, "Value", "Text"))">
                                </select>
                                <span asp-validation-for="CategoryId"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Description"></label>
                                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="Status"></label>
                                <select class="form-control" asp-for="Status">
                                    <option value=""> -- Choose --</option>
                                    <option value="Active"> Active </option>
                                    <option value="Deactive"> Deactive </option>
                                </select>
                                <span asp-validation-for="Status"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="StartDate"></label>
                                <input type="date" asp-for="StartDate" class="form-control" />
                                <span asp-validation-for="StartDate"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="EndDate"></label>
                                <input type="date" asp-for="EndDate" class="form-control" />
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Image"></label>
                                <input type="file" class="form-control" asp-for="Image" />
                                <span asp-validation-for="Image"></span>
                            </div>
                            <button class="my-3 btn btn-primary btn-lg" type="submit">
                                Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>