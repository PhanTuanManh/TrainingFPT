@model TrainingFPT.Models.CourseDetail

@{
    ViewData["Title"] = "Course Page Update";
    ViewData["namePage"] = "Course Update";
    ViewBag.report = false;

    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="row">
    <div class="col-sm-12 col-md-12">
        <a class="btn btn-primary" href="@Url.Action("Index", "Courses")"> Back to list Courses </a>
        <div class="card card-primary my-3">
            <div class="card-header">
                <h5> Update Cour</h5>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" asp-action="Edit">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NameCourse"></label>
                                <input type="text" asp-for="NameCourse" class="form-control" required/>
                                <span asp-validation-for="NameCourse" class="text-danger"></span>
                                @* id cua course *@
                                <input type="hidden" asp-for="Id" />
                            </div>
                            <div class="form-group mb-3">
                                <label> Category </label>
                                <select class="form-control"
                                        asp-for="CategoryId"
                                        asp-items="@(new SelectList(ViewBag.Categories, "Value", "Text"))">
                                </select>
                                <span asp-validation-for="CategoryId"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Description"></label>
                                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="Status"></label>
                                <select class="form-control" asp-for="Status">
                                    <option value=""> -- Choose --</option>
                                    <option value="Active"> Active </option>
                                    <option value="Deactive"> Deactive </option>
                                </select>
                                <span asp-validation-for="Status"></span>
                            </div>
                        </div>
                        <div class="com-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="StartDate"></label>
                                <input type="date" asp-for="StartDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="StartDate"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="EndDate"></label>
                                <input type="date" asp-for="EndDate" class="form-control" value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="EndDate"></span>
                            </div>


                            <div class="form-group mb-3">
                                <label asp-for="Image"></label>
                                <input type="file" asp-for="Image" class="form-control" />
                                <span asp-validation-for="Image"></span>
                                <br />
                                <img width="50%" src="/uploads/images/@Model.ViewImageCouser" alt="@Model.NameCourse" />
                            </div>

                            <button class="btn btn-primary" type="submit"> Update </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>