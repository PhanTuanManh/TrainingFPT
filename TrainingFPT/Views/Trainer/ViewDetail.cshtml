@model TrainingFPT.Models.UserDetail
@{
    ViewData["Title"] = "Trainer Page";
    ViewData["namePage"] = "Trainer";
    ViewBag.report = false;

    Layout = "~/Views/Shared/_LayoutMain.cshtml";

}
<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="card">
            <div class="card-header">
                <h5> Add New Trainer</h5>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" asp-action="Add">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3" style="width: 200px;height: 200px;border-radius: 50%;overflow: hidden;">
                                <img width="100%" height="auto" style="display:block" src="/uploads/images/@Model.Avatar" alt="@Model.Avatar" />
                            </div>
                             <div class="form-group mb-3">
                                <label asp-for="UserName"></label>
                                <input type="text" asp-for="UserName" class="form-control" disabled/>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">

                                <label asp-for="NameRole"></label>
                                <input type="text" asp-for="NameRole" disabled class="form-control" />
                                <span asp-validation-for="RoleId"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Status"></label>
                                <input type="text" asp-for="Status" class="form-control" disabled/>
                                <span asp-validation-for="Status"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Phone"></label>
                                <input type="text" asp-for="Phone" class="form-control" disabled/>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Address"></label>
                                <input type="text" asp-for="Address" class="form-control" disabled/>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="BirthDay"></label>
                                <input type="date" asp-for="BirthDay" class="form-control" disabled/>
                                <span asp-validation-for="BirthDay" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Gender"></label>
                                <input type="text" asp-for="Gender" class="form-control" disabled/>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ExtraCode"></label>
                                <input type="text" asp-for="ExtraCode" class="form-control" disabled/>
                                <span asp-validation-for="ExtraCode" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Education"></label>
                                <input type="text" asp-for="Education" class="form-control" disabled/>
                                <span asp-validation-for="Education" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ProgramingLang"></label>
                                <input type="text" asp-for="ProgramingLang" class="form-control" disabled/>
                                <span asp-validation-for="ProgramingLang" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="ToeicScore"></label>
                                <input type="number" asp-for="ToeicScore" class="form-control" disabled/>
                                <span asp-validation-for="ToeicScore" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="CreatedAt"></label>
                                <input asp-for="CreatedAt" type="text" class="form-control" disabled/>
                                <span asp-validation-for="CreatedAt" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="UpdatedAt"></label>
                                <input asp-for="UpdatedAt" type="text" class="form-control" disabled />
                                <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                           
                            <div class="form-group mb-3">

                                <label asp-for="LastLogin"></label>
                                <input type="text" asp-for="LastLogin" disabled class="form-control" />
                                <span asp-validation-for="LastLogin"></span>
                            </div>
                            <div class="form-group mb-3">

                                <label asp-for="LastLogout"></label>
                                <input type="text" asp-for="LastLogout" disabled class="form-control" />
                                <span asp-validation-for="LastLogout"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" type="email" class="form-control" disabled/>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Skills"></label>
                                <input type="text" asp-for="Skills" class="form-control" disabled />
                                <span asp-validation-for="Skills" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

