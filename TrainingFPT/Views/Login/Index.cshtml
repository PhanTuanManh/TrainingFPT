@model TrainingFPT.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>

                                @if (ViewData["MessageLogin"] != null)
                                {
                                    <p class="text-danger">@ViewData["MessageLogin"]</p>
                                }

                            </div>

                            @using(Html.BeginForm("Index", "Login", FormMethod.Post, new { @class="user" }))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control form-control-user" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-user" })
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Login
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>